<% layout('/layouts/boilerplate') %>
<div class="row">
    <div class="col-8 offset-2">
        <br><br>
        <h3>Create a New Listing</h3>
        <form action="/listings" method="post">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" placeholder="Add a catchy title" class="form-control" id="title">
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" class="form-control" id="description"></textarea>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image Link</label>
                <input type="text" name="listing[image]" placeholder="enter image URL/Link" class="form-control" id="image">
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="text" name="listing[price]" placeholder="1200" class="form-control" id="price">
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text"  name="listing[country]" placeholder="India" class="form-control" id="country">
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" type="text" name="listing[location]" placeholder="Nainital, Uttarakhand" class="form-control" id="location">
            </div>
            <br><br>
            <button class="btn btn-dark add-btn">Add</button>
            <br><br>
        </form>
        </div>
    </div>

